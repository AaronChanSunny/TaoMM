<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Widget.CardViewContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_content_margin_left</item>
        <item name="android:paddingRight">@dimen/card_content_margin_right</item>
        <item name="android:paddingTop">@dimen/card_content_margin_top</item>
        <item name="android:paddingBottom">@dimen/card_content_margin_bottom</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="Widget.CardView" parent="android:Widget">
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_margin_right</item>
    </style>

</resources>
